properties([
    parameters([
        choice(
            name: 'branch', 
            choices: 'main\nfeature', 
            description: ''),
        choice(
            name: 'ENV', 
            choices: 'stg\nprd', 
            description: '')
    ])
])

pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo "Hello ${ENV}"
            }
        }
    }
    post {
        always {
            cleanWs()

            script {
                manager.addShortText("${ENV}", "black", "lightblue", "1px", "lightgray")
                manager.addShortText("${branch}", "black", "lightblue", "1px", "lightgray")
            }
        }
    }
}
