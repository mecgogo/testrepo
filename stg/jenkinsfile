properties([
    parameters([
        choice(
            name: 'env', 
            choices: 'stg\nprd', 
            description: '') ,
        choice(
            name: 'branch', 
            choices: 'main\nfeature', 
            description: '') 
    ])
])

pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello stg'
            }
        }
    }
    post {
        always {
            script {
                manager.addShortText("${env}", "black", "lightblue", "1px", "lightgray")
                manager.addShortText("${branch}", "black", "lightblue", "1px", "lightgray")
            }
        }
    }
}
